
<%= form_for(@article, html: {multipart: true}) do |f| %>
<ul>
<% @article.errors.full_messages.each do |error| %>
<li> <%= error %> </li>
<% end %>
</ul>

<p>
<%= f.label :title,"Add a title" %><br />
<%= f.text_field :title %>
</p>

<p>
<%= f.label :body, "Write here what you want" %><br />
<%= f.text_area :body %>
</p>

<p>
<%= f.label :tag_list %><br />
<%= f.text_field :tag_list %>
</p>

<p>
<%= f.label :birthdate %><br />
<%= f.date_select :birthdate  %>
</p>


<p>
<% if @article.image.exists? %>
<%= image_tag @article.image.url %>
<% end %>
<%= f.label :image, "Attach an New Image" %><br />
<%= f.file_field :image %>
</p>

<p>
<%= f.submit %>
</p>

<% end %>
